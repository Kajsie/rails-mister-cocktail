<h2><%= @cocktail.name %></h2>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
<% end %>


<p><%= link_to "Add drink recipe", new_cocktail_dose_path(@cocktail) %></p>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> — <%= dose.ingredient.name %> —
      <%= link_to "Delete", dose_path(dose), method: :delete %>
    </li>
  <% end %>
  </ul>
