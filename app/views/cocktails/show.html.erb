<h2><%= @cocktail.name %></h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
  <%= dose.ingredient.name %> : <%= dose.description %>
  ---
  <%= link_to "Delete", dose_path(dose), method: :delete %>
  </li>
<% end %>
</ul>

<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 400, height: 300, crop: :fill %>
<% end %>

<p><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %></p>
<p> <%= link_to "Back to Cocktails", cocktails_path %></p>
